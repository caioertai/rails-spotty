<div class="container col-lg-4 mt-4 mb-3">
  <div class="text-center">
    <h3>Bucket List</h3>
  </div>
  <div class="row">
    <div class="card mt-4" style="width: 30rem;">
    <ul class="list-group">
      <% @favourites.each do |favourite| %>
      <li class="list-group-item"> <strong> <%= favourite.spot.category.name %> </strong> : <%= link_to favourite.spot.name, favourite_path(favourite) %>
       - <%= favourite.spot.location  %>
      </li>
      <% end %>
    </ul>
  </div>
  </div>
</div>


