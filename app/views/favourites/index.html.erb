<div class="container">
  </div>
  <div class="text-center mt-3">
    <h1>Bucket List</h1>
  </div>
  <div class="row mt-3 mb-3">
    <% @favourites.each do |favourite| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card mt-3" style="width: 22rem;">
          <div class="card-description mt-3">
            <div class= "card-text text-center">
            <p><%= favourite.spot.name %></p>
            <p><%= favourite.spot.location  %><p>
              <%= cl_image_tag favourite.spot.photos %>
             <p>  <%= link_to "<i class='fa fa-trash'></i>".html_safe, favourite_path(favourite),  method: :delete, data:{ confirm: "Are you sure"}  %></p>
             </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


