<% favourite = spot.favourited(current_user) %>
<% if favourite.empty? %>
  <%= link_to(spot_favourites_path(spot), method: :post, remote: true) do %>
    <i class="far fa-heart fa-2x"></i>
  <% end %>
<% else %>
  <%= link_to(favourite_path(favourite.first), method: :delete, remote: true) do %>
    <i class="fas fa-heart fa-2x"></i>
  <% end %>
<% end %>


