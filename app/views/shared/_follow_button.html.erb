<% if user != current_user %>
  <% follow = current_user.following(user) %>
  <% if follow.empty? %>
      <i class="far fa-plus-square fa-2x m-1 js-follow-btn" data-followstate = "not following" data-user_id= <%= user.id %> ></i>
  <% else %>
      <i class="fas fa-minus-square fa-2x m-1 js-follow-btn" data-followstate = "following" data-follow_id= <%= follow.first.id %> data-user_id=<%= user.id %> ></i>
  <% end %>
<% end %>

