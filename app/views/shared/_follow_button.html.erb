<% if user != current_user %>
  <% follow = current_user.following(user) %>
  <% if follow.empty? %>
    <%= link_to "Follow", user_follows_path(user), method: :post, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Unfollow", unfollow_path(follow.first), method: :delete, class: "btn btn-primary" %>
  <% end %>
<% end %>
