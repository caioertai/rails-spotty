<% if user != current_user %>
  <% follow = current_user.following(user) %>
  <% if follow.empty? %>
    <%= link_to user_follows_path(user), method: :post, remote: true do %>
        <i class="far fa-plus-square fa-2x" data-followstate = "not following" data-user_id = <%= user.id.to_s %>  ></i>
    <% end %>
  <% else %>
    <%= link_to unfollow_path(follow.first), method: :delete, remote: true do %>
        <i class="fas fa-minus-square fa-2x" data-followstate = "following" data-user_id=<%= user.id.to_s %>  ></i>
    <% end %>
  <% end %>
<% end %>
