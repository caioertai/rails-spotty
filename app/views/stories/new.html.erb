<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm mt-5">
      <%= simple_form_for [@spot, @story] do |f| %>
      <%= f.simple_fields_for :photo do |m| %>
        <%= m.input :file, as: :file %>
      <% end %>
      <%= f.input :content %>
      <%= f.button :submit, class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>
