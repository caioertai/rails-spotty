<div class="container mt-5" style="height: 400px;">
  <%= simple_form_for [@spot, @story] do |f| %>
  <%= f.simple_fields_for :photos do |m| %>
  <%= m.input :file, as: :file, :input_html => { multiple: true }, name: "file" %>
  <% end %>

  <%= f.input :question,
              as: :select,
              collection: @spot.questions,
              label_method: :content,
              value_method: :id,
              input_html: { class: 'select2' }
                %>
  <%= f.input :content %>


  <%#= f.input :qol_selection, :as => :select, :collection => QuestionModel.qol_selections.keys.to_a
 %>

  <%= f.button :submit, class: "btn btn-dark waves-light waves-effect" %>
  <% end %>
  <%= link_to "Back", spot_path(@spot), class: "btn btn-dark mt-5 mb-5 waves-light waves-effect" %>
</div>



