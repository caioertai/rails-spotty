<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
       <div class="card">
          <ul>
            <li><p> Name: <%= @spot.name %></li>
            <li><p>Location: <%= @spot.location %></li>
            <li><p>Category: <%= @spot.category %></p></li>
      </div>
      <% @stories.each do |story| %>
        <div class="card">
        <%= "#{story.user.username} left a story:" %>
        <em><%= story.content %></em>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
