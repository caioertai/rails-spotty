<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm mt-5">
      <%= simple_form_for @spot do |f| %>
      <input type="text" class="js-auto-complete"/>
      <%= f.input :place_id, input_html: { class: "js-place-id" } , :label => false, as: "hidden" %>
      <%= f.input :name, :label => false, input_html: { class: "js-place-name" }, as: "hidden" %>
      <%= f.input :location, :label => "Location:", input_html: { class: "js-place-address" } %>
      <%= simple_fields_for :no_model_fields do |n| %>
      <%= n.input :photo_url, :label => false, input_html: { class: "js-place-photo" }, as: "hidden" %>
      <% end %>
      <%= f.association :category, :label => "What category is this spot?" %>
      <%= f.button :submit, class: "btn btn-primary waves-light waves-effect" %>
      <% end %>
    </div>
  </div>
</div>
