<div class="spot-page">
  <div class="spot-banner mb-3">
    <div class="button-bar">
      <!-- <div class="back-button">
        <%#= link_to spots_path do %>
        <i class="fa fa-arrow-left" style="font-size:28px"></i>
        <#% end %>
      </div> -->
      <%= render 'shared/favourite_button', spot: spot %>
    </div>

    <div class="modal-info spot-info p-3 d-flex flex-wrap flex-column">
      <h5 class=""><%= @spot.name  %></h5>
      <p class=""><%= @spot.location  %> </p>
      <p><%= @spot.category.name %></p>
    </div>

    <div class="owl-carousel">
      <% @spot.photos.each do |photo| %>
      <%= cl_image_tag photo.file.key, height: 300, width: 300, crop: :fill, class: "d-block w-100" %>
      <% end %>
    </div>
  </div>
</div>


<div class="accordion" id="accordionStories">
  <% @stories.each_with_index do |story, index| %>
  <div class="modal-card">
    <button class="card-button" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">

      <div class="card-header" id="heading<%= index %>">

        <div class="d-flex">
          <div class="justify-content-start">
          <%= link_to user_path(story.user) do %>
          <%= cl_image_tag story.user.photo.file.key, height: 100, width: 100, crop: :fill, class: "avatar-large", alt: "avatar-large" %>
          <% end %>

          <div class="story-title mt-2 ml-3">
            <h4><%= story.user.first_name %></h4>
            <p class="modal-story-content"> "<%= story.content %>"</p>
          </div>
        </div>
      </div>
    </button>

    <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordionStories">
      <div class="card-body">
        <p style="color: transparent;"><%= story.content %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

