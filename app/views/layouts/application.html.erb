<!DOCTYPE html>
<html>
  <head>
    <title>Spotty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=<%=ENV['GOOGLE_API_SERVER_KEY']%>" data-turbolinks-eval="false"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <% if current_page? root_path %>
      <div class="landing-page">
  <% else %>
    <%= render 'shared/navbar' %>
    <div class="container">
  <!-- PUT this above the 'yield' -->
  <% end %>
    <%= render 'shared/flashes' %>

    <%= yield %>



    <%= javascript_pack_tag "map" , 'data-turbolinks-track': 'reload'%>
  </body>
</html>
